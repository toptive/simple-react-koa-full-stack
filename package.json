{
  "name": "simple-react-koa-full-stack",
  "version": "1.0.0",
  "description": "Boilerplate to build a full stack web application using React, Node.js, Koa and Webpack.",
  "main": "src/server/index.js",
  "scripts": {
    "build": "webpack --mode production",
    "start": "npm run build && node src/server/index.js",
    "client": "webpack-dev-server --mode development --devtool inline-source-map --hot",
    "server": "nodemon src/server/index.js",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "lint": "eslint ./src",
    "migrate": "knex --knexfile ./knexfile.js migrate:latest",
    "seed": "knex --knexfile ./knexfile.js seed:run"
  },
  "author": "Sandeep Raveesh",
  "license": "ISC",
  "dependencies": {
    "@koa/cors": "^2.2.3",
    "@reach/router": "^1.2.1",
    "apollo-boost": "^0.4.0",
    "apollo-server-koa": "^2.4.2",
    "babel-polyfill": "^6.26.0",
    "bookshelf": "^0.14.2",
    "graphql": "^14.3.1",
    "knex": "^0.16.3",
    "koa": "^2.7.0",
    "koa-router": "^7.4.0",
    "koa-session": "^5.10.1",
    "koa-static": "^5.0.0",
    "react": "^16.8.2",
    "react-apollo": "^2.5.6",
    "react-dom": "^16.8.2",
    "sqlite3": "^4.0.6"
  },
  "devDependencies": {
    "@babel/core": "^7.0.0",
    "@babel/plugin-proposal-class-properties": "^7.0.0",
    "@babel/preset-env": "^7.0.0",
    "@babel/preset-react": "^7.0.0",
    "babel-eslint": "^10.0.0",
    "babel-loader": "^8.0.0",
    "clean-webpack-plugin": "^1.0.0",
    "concurrently": "^4.0.0",
    "css-loader": "^2.0.0",
    "eslint": "^5.0.0",
    "eslint-config-airbnb": "^17.0.0",
    "eslint-plugin-import": "^2.11.0",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-react": "^7.7.0",
    "file-loader": "^3.0.0",
    "html-webpack-plugin": "^3.2.0",
    "nodemon": "^1.17.3",
    "style-loader": "^0.23.0",
    "url-loader": "^1.0.1",
    "webpack": "^4.5.0",
    "webpack-cli": "^3.0.8",
    "webpack-dev-server": "^3.1.3"
  }
}
